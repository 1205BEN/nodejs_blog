<form method="POST">
  <div class="mt-4">
    <label for="search-input" class="form-label">Nhập từ khóa</label>
    <input type="text" class="form-control" name="q" id="search-input" placeholder="Tìm kiếm">
  </div>
  <div class="mt-4">
    <label for="gender-input" class="form-label">Từ khóa</label>
    <select name="gender" class="form-control" id="gender-input">
      <option value="">Chọn giới tính</option>
      <option value="male">Nam</option>
      <option value="female">Nữ</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Tìm kiếm</button>
</form>